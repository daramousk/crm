<openerp>
    <data>
        <record id="subscription_search" model="ir.ui.view">
            <field name="name">Search view for subscriptions</field>
            <field name="model">publication.subscription</field>
            <field name="arch" type="xml">
                <search string="Subscriptions" version="7.0">
                    <field name="partner_id" />
                    <field name="publication_id" />
                    <filter
                        name="email" string="Email"
                        domain="[('email_distribution', '=', True)]"
                        help="Email publications"
                    />
                    <filter
                        name="print" string="Print"
                        domain="[('print_distribution', '=', True)]"
                        help="Print publications"
                    />
                    <separator/>
                    <group expand="0" string="Group By...">
                        <filter
                            string="Partner"
                            context="{'group_by':'partner_id'}"
                        />
                        <filter
                            string="Publication"
                            context="{'group_by':'publication_id'}"
                        />
                    </group>
                </search>
            </field>
        </record>
        <record
            id="subscription_tree"
            model="ir.ui.view">
            <field name="name">subscription.tree</field>
            <field name="model">publication.subscription</field>
            <field name="type">tree</field>
            <field
                name="arch"
                type="xml"
            >
                <tree string="Subscriptions">
                    <field name="partner_id" />
                    <field name="publication_id" />
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="email_distribution" />
                    <field name="print_distribution" />
                    <field name="copies" />
                </tree>
            </field>
        </record>

        <record
            id="subscription_form"
            model="ir.ui.view"
        >
            <field name="name">subscription.form</field>
            <field name="model">publication.subscription</field>
            <field name="type">form</field>
            <field
                name="arch"
                type="xml"
            >
                <form string="Subscription">
                    <field
                        name="partner_id"
                        options="{'create': false, 'create_edit': false}"
                    />
                    <group 
                        colspan="4" col="2"
                        attrs="{'invisible': [('partner_id','=',False),]}"
                    >
                        <field
                            name="publication_id"
                            domain="[('active','=',True),]"
                            options="{'create': false, 'create_edit': false}"
                            on_change="on_change_partner_publication_id(partner_id, publication_id)"
                        />
                    </group>
                    <group 
                        colspan="4" col="2"
                        attrs="{'invisible': [('publication_id','=',False),]}"
                    >
                        <field name="date_start" />
                        <field name="date_end" />
                        <field name="email_distribution" />
                        <field name="print_distribution" />
                        <field
                            name="copies"
                            attrs="{
                                'invisible': [('print_distribution','=',False)]
                            }"
                        />
                        <field
                            name="product_id"
                            domain="[
                                ('publication_id','=',publication_id),
                                ('email_distribution','=',email_distribution),
                                ('print_distribution','=',print_distribution),
                            ]"
                            options="{'create': false, 'create_edit': false}"
                        />
                    </group>
                </form>
            </field>
        </record>

    </data>
</openerp>
