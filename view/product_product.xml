<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="product_normal_form_view">
            <field name="name">Add publication fields</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Publication product">
                        <group colspan="4" col="4">
                            <separator string="Publication info" colspan="4" />
                            <field
                                name="publication_id"
                                options="{'create': false, 'create_edit': false}"
                            />
                            <field name="email_distribution" />
                            <field name="print_distribution" />
                            <separator string="Contract info" colspan="4" />
                            <field name="recurring_interval" />
                            <field name="recurring_rule_type" />
                    </group>
                    </page>
                </notebook>
            </field>
        </record>

    </data>
</openerp>
