<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record
        id="publication_publication_form"
        model="ir.ui.view">
        <field name="name">publication.publication.form</field>
        <field name="model">publication.publication</field>
        <field name="type">form</field>
        <field
            name="arch"
            type="xml">
            <form string="Publication">
                <group
                    colspan="4" col="2"
                    >
                    <field name="code" />
                    <field name="name" />
                    <field name="distribution_type" />
                    <field name="product_id" />
                    <field name="version_ids" />
                </group>
            </form>
        </field>
    </record>

    <record
        id="publication_publication_tree"
        model="ir.ui.view">
        <field name="name">publication.publication.tree</field>
        <field name="model">publication.publication</field>
        <field name="type">tree</field>
        <field
            name="arch"
            type="xml">
            <tree string="Publication">
                <field name="code" />
                <field name="name" />
                <field name="distribution_type" />
            </tree>
        </field>
    </record>

</odoo>
